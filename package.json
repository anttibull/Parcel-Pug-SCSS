{
  "name": "Parcel-Pug-SASS",
  "version": "1.0.0",
  "main": "src/views/home.pug",
  "license": "MIT",
  "scripts": {
    "start": "yarn cache clean && rm -rf dist && parcel src/views/home.pug --port 8080 --open ",
    "build:parcel": "parcel build src/views/home.pug -d build --public-url ./ --out-file index.html",
    "build": "yarn cache clean && rm -rf build && yarn build:parcel",
    "csscomb": "csscomb src",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint --fix src/**/*.{js}",
    "prettify:fix": "yarn prettier --write src/**/*.{js}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "csscomb --tty-mode --",
      "git add"
    ],
    "*.sass": [
      "csscomb --tty-mode --",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/preset-react": "^7.7.4",
    "autoprefixer": "^9.7.3",
    "parsel": "^0.3.0",
    "postcss-modules": "^1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@prettier/plugin-pug": "^1.1.1",
    "csscomb": "^4.3.0",
    "cssnano": "^4.1.10",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "pug": "^2.0.4",
    "sass": "^1.24.0"
  }
}
